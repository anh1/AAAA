<!DOCTYPE html>
<html>
<head>
	<title>Small Business Teaming Network</title>
	<%= stylesheet_link_tag :all %>      
	<%= javascript_include_tag :defaults %>
	<%= csrf_meta_tag %>	
	<%= stylesheet_link_tag "mbasic.css", "tabs.css" %>   
</head>

<body>
	<%if !@current_user.tcom.nil? %>
		<font size="6" color= #ffffff face="Arial" > <%= @current_user.tcom.company_name.upcase  %> </font>
	<% end %>
	<div id="header">
	<ul id="primary">
		<li><span>Inbox</span>
			<ul id="secondary">
					<li><%= link_to "Home", :controller => "homes", :action => "index" %></li> 
					<li><a href="#">About SBTN</a></li>
					<li><%= link_to "Teaming", :controller=>"teamings", :action=>"index"%></li> 
					<li><%= link_to "Networking", :controller=>"forums", :action => "index" %></li>
					<li><a href="#">Resources</a></li>
			</ul>		
		</li>
		<li><%= link_to "Company", :controller => "tcoms", :action => "index" %></li>
		<li><%= link_to "CMS", :controller=>"mylists", :action => "index" %></li>		
		<% if !@current_user.tcom.nil? %>
			<li><%= link_to "Update", edit_tcom_path(current_user.tcom) %></li>
		<% end %>
		<li><a href="contact.html">Q/C</a></li>
	</ul>
	</div>
	<div id="main">
		<div id="contents">
			<%= yield %>
		</div>
		<div id="footer">
		</div>
	</div>
</body>
</html>