<div id="forum_topic">
<% form_for @topic do |f| %>
<p>
   Subject:<br />
   <%= f.text_field :name %>
</p>
 
 <p> 
  Description:<br />
 <%= f.text_area :content %>
 </p> 
   
   <% if params[:forum] %><input type="hidden" id="topic_forum_id" name="topic[forum_id]" value="<%= params[:forum] %>"/><% end %>  

 
  <p>
  
  <%= f.submit "Create" %>
  
  </p>
  
  <% end %>
