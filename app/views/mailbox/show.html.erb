


<h2><%=h @folder.name %></h2>

<table border="1">
  <tr>
    <th>From</th>
    <th>Subject</th>
    <th>Received</th>
  </tr>
  
  <% for message in @messages %>
    <tr>
      <td><%= message.author.login %></td>
      <td><%= link_to message.subject, message_path(message) , :remote => true %></td>   
      <td><%= distance_of_time_in_words(message.created_at, Time.now) %> ago</td>
     </tr>
  <% end %>
</table>


