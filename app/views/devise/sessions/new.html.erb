<div id="main">
<h2 class="x-panel-header">Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => new_user_session_path()) do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div><br>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div><br><br>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %> 
    <%= f.label :remember_me %>
  </div><br>
  <% end -%>

  <div class="field">
    <%= f.submit "Login Now" %>
    <%=link_to "cancel", root_path%>
  </div>
<% end %><br><br>

<%= render :partial => "devise/shared/links" %>
</div>